{
  "root": true,
  "env": {
    "browser": true, // browser global variables
    // adds all ECMAScript 2021 globals and automatically sets the ecmaVersion parser option to 12.
    "es2021": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "airbnb-base",
    "plugin:prettier/recommended",
    "./.eslintrc-auto-import.json"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest" // 支持所有最新 ES 语法（推荐）
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "node": {
        // 确保包含 .mjs
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".mjs"]
      }
    },
    "import/ignore": [
      "element-plus" // 忽略 element-plus 库的导入检查
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
      ],
      "rules": {
        // Note: you must disable the base rule as it can report incorrect errors
        "no-shadow": "off",
        "@typescript-eslint/no-namespace": "off",
        "@typescript-eslint/no-shadow": "error",
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": ["*.vue"],
      "parser": "vue-eslint-parser", // 解析 Vue 模板的核心解析器
      "parserOptions": {
        // 关键：让 vue-eslint-parser 自动根据 script lang 选择子解析器
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "plugins": ["@typescript-eslint"],
      "rules": {
        // 对 Vue 中的 TS 部分：关闭 JS 规则，启用 TS 规则
        // 对 Vue 中的 JS 部分：自动使用上层的 JS 规则
        "vue/no-mutating-props": "off",
        "no-shadow": "off", // 先关闭，让 TS 规则生效（仅对 lang=ts 生效）
        "@typescript-eslint/no-shadow": "error", // 仅对 TS 代码生效
        "no-unused-vars": "off", // 先关闭，让 TS 规则生效（仅对 lang=ts 生效）
        "@typescript-eslint/no-unused-vars": "warn", // 仅对 TS 代码生效
        "@typescript-eslint/no-namespace": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ],
  "rules": {
    "prettier/prettier": "warn",
    "no-use-before-define": [
      "off",
      {
        "variables": false, // 关闭变量检查
        "functions": false, // 关闭函数检查
        "classes": false, // 关闭类检查
        "allowNamedExports": false // 关闭命名导出检查（ESLint v8+）
      }
    ],
    "linebreak-style": 0,
    "no-console": "off",
    "no-undef": "error",
    "no-unused-vars": "warn",
    "spaced-comment": "warn",
    "no-namespace": "off",
    "import/prefer-default-export": "off",
    "no-restricted-syntax": ["error", "WithStatement"],
    "vue/multi-word-component-names": "off",
    "import/no-unresolved": "off",
    "import/no-cycle": "off", //TODO 暂时关闭，后续需要解决
    "no-param-reassign": "off", //TODO 暂时关闭，后续需要解决
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "test/**", // tape, common npm pattern
          "tests/**", // also common npm pattern
          "spec/**", // mocha, rspec-like pattern
          "**/__tests__/**", // jest pattern
          "**/__mocks__/**", // jest pattern
          "test.{js,jsx}", // repos with a single test file
          "test-*.{js,jsx}", // repos with multiple top-level test files
          "**/*{.,_}{test,spec}.{js,jsx}", // tests where the extension or filename suffix denotes that it is a test
          "**/jest.config.js", // jest config
          "**/webpack.config.js", // webpack config
          "**/webpack.config.*.js", // webpack config
          "**/rollup.config.js", // rollup config
          "**/rollup.config.*.js", // rollup config
          "**/gulpfile.js", // gulp config
          "**/gulpfile.*.js", // gulp config
          "**/Gruntfile{,.js}", // grunt config
          "**/protractor.conf.js", // protractor config
          "**/protractor.conf.*.js", // protractor config
          "**vite**",
          "**@vitejs**"
        ],
        "optionalDependencies": false
      }
    ],
    // "no-param-reassign": [
    //   "error",
    //   {
    //     "props": true,
    //     "ignorePropertyModificationsFor": [
    //       "acc", // for reduce accumulators
    //       "accumulator", // for reduce accumulators
    //       "app", // for vue app
    //       "e", // for e.returnvalue
    //       "ctx", // for Koa routing
    //       "config", // for axios requests
    //       "context", // for Koa routing
    //       "headers", // for axios headers
    //       "req", // for Express requests
    //       "request", // for Express requests
    //       "res", // for Express responses
    //       "response", // for Express responses
    //       "$scope", // for Angular 1 scopes
    //       "staticContext", // for ReactRouter context
    //       "state" // for vuex state
    //     ]
    //   }
    // ],
    "import/extensions": [
      "off",
      "ignorePackages",
      {
        "js": "never",
        "mjs": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
